{
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "settings": {
      "react": {
        "pragma": "React" // Pragma to use, default to "React"
      }
    },
    "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "objectLiteralShorthandProperties": true,
        "classes": true,
        "globalReturn": false
    },
    "rules": {
        "no-dupe-keys": 1,            // disallow duplicate keys when creating object literals
        "no-empty": 1,                // disallow empty statements
        "no-invalid-regexp": 1,       // disallow invalid regular expression strings in the RegExp constructor
        "valid-typeof": 1,            // Ensure that the results of typeof are compared against a valid string


        ////////// Best Practices //////////

        "curly": 1,                 // specify curly brace conventions for all control statements
        "eqeqeq": 1,                // require the use of === and !==
        "no-eval": 1,               // disallow use of eval()
        "radix": 1,                 // require use of the second argument for parseInt() (off by default)
        "wrap-iife": 1,             // require immediate function invocation to be wrapped in parentheses (off by default)
        "yoda": [1, "never"],       // require or disallow Yoda conditions



        ////////// Stylistic Issues //////////

        "semi-spacing": 1,              // enforce spacing before and after semicolons
        "camelcase": 1,                 // require camel case names
        "eol-last": 1,                  // enforce newline at the end of file, with no multiple empty lines
        "key-spacing": 1,               // enforces spacing between keys and values in object literal properties
        "no-multiple-empty-lines": [1, {"max": 2}], // disallow multiple empty lines
        "no-trailing-spaces": 1,        // disallow trailing whitespace at the end of lines
        "space-infix-ops": 1,           // require spaces around operators
        "quotes": [1, "single"],        // specify whether double or single quotes should be used
        "semi": 2,
        "indent": [2, 4, {"SwitchCase": 1}],
        "no-multi-spaces": 0,
        "react/no-multi-comp": 1,
        "react/prop-types": [1, {ignore: ["children"]}],
        "react/wrap-multilines": 1,
        "react/self-closing-comp": 1,
        "react/no-did-mount-set-state": 1,
        "react/no-did-update-set-state": 1,
        "react/jsx-closing-bracket-location": 1,
        "react/jsx-curly-spacing": [1, "never"],
        "react/jsx-equals-spacing": [1, "never"],
        "react/jsx-indent-props": [1, 4],
        "react/jsx-pascal-case": 1,
        "react/jsx-uses-react": 1,
        "react/react-in-jsx-scope": 1,
        "react/jsx-no-undef": 1,
        "react/jsx-uses-vars": 1,
        "react/no-unknown-property": 1
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "super": true
    }
}
